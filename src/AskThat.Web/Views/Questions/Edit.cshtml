@using AskThat.Web.Models.ViewModels
@model EditAnswerViewModel
@{
    ViewData["Title"] = "Edit Answer";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Edit Answer</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="AnswerId" />
                        <input type="hidden" asp-for="QuestionId" />

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Answer Content</label>
                            <textarea asp-for="Content" class="form-control" rows="8"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Update Answer</button>
                            <a asp-controller="Questions" asp-action="Details" asp-route-id="@Model.QuestionId"
                                class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}